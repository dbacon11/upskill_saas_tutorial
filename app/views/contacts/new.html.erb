<div class="container">
  <h3 class="text-center">Contact Form</h1>
  
  <%= form_for "/contacts" do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :name %>
    
    <%= f.label :Email %>
    <%= f.text_field :email %>
    
    <%= f.label :Comments %>
    <%= f.text_area :comments %>
    
    <%= f.submit 'Submit' %>
    
    <% end %>
    
  </div>